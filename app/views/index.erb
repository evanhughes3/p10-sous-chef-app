<% if @sign_out_message %>
  <h3><%= @sign_out_message %></h3>
<% end %>

<% if @message %>
  <h3><%= @message %></h3>
<% end %>


<% if current_user %>
  <h1> Welcome <%= current_user.first_name %> </h1>
  <h3>Here are your recipes:</h3>

  <% current_user.recipes.each do |recipe| %>
    <h3><a href="/recipe/<%= recipe.yummly_id %>"><%= recipe.name.capitalize %></a></h3>
    <img src="<%= recipe.img_url %>" alt="<%= recipe.name %>">
      <% recipe.ingredients.each do |ingredient| %>
        <h5 class="ingredient"><%= ingredient.name %></h5>
        <h5></h5>
      <% end %>

      <% if recipe.instructions %>
    <p><%= recipe.instructions %></p>
      <% end %>

      <a href="<%= recipe.recipe_url %>">Click here to view recipe</a>

  <% end %>

  <form action="/users/<%= current_user.id %>/list/send" method="post">
    <input type="submit" value="Send Shopping List to Phone!">
  </form>

<% else %>

<h1>Welcome to the Home Page</h1>

<% end %>
